@model IEnumerable<Category>

<h1>الأصناف</h1>

<a class="btn btn-primary" asp-action="Create">إضافة صنف</a>
<table class="table">
    <thead>
        <tr>
            <th> معرف الصنف</th>
            <th> إسم الصنف</th>
        </tr>
             
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
               <td>@category.CategoryName</td>
                  <td>
              <a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.CategoryId"> تعديل</a>
              <a class="btn btn-primary" asp-action="Delete" asp-route-id="@category.CategoryId"> حذف</a>
                  </td>
            </tr>
        }
    </tbody>
</table>