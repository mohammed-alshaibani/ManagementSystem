@model Pharam_System___V6.ViewModel.ProductViewModel
@inject Pharam_System___V6.Repositry.IRepositry<Pharam_System___V6.Models.Category> category
<h2>Create a new Product</h2>


<form asp-action="Create" enctype="multipart/form-data">

     <div class="form-group">
           <label asp-for="Category.CategoryName" class="control-label"> </label>
           <select asp-for="Category.CategoryName" asp-items="new SelectList(category.GetAll().Select(x=>x.CategoryName))"></select>
           <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
         </div>
 

 <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="ProductPrice" class="control-label"></label>
        <input asp-for="ProductPrice" class="form-control" />
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="ProductDescription" class="control-label"></label>
        <input asp-for="ProductDescription" class="form-control" />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="ProductImage" class="control-label"></label>
        <input asp-for="ProductImage" class="form-control" />
        <span asp-validation-for="ProductImage" type="file" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
